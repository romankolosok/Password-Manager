<Window x:Class="PasswordManager.App.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.App.Views"
        mc:Ignorable="d"
        Title="LoginView" Height="600" Width="400">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <!-- Keep primary button readable when disabled (WPF default is too faint) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#B0C4DE"/>
                                <Setter Property="Foreground" Value="#2F4F6F"/>
                                <Setter TargetName="border" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">

            <TextBlock Text="Password Manager" HorizontalAlignment="Center" FontSize="24" Margin="0,0,0,40"/>

            <Grid Margin="0,0,0,15">
                <TextBox x:Name="EmailTextBox" Height="30" Padding="5,4,5,0" FontSize="14" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Email" IsHitTestVisible="False" Margin="8,6,0,0" FontSize="14" Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=EmailTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Validation or server error -->
            <TextBlock x:Name="ErrorMessageBlock" Text="{Binding DisplayError}" Foreground="#C42B1C" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,10"
                       Visibility="{Binding DisplayErrorVisible, Converter={StaticResource BoolToVisibility}}"/>

            <Grid Margin="0,0,0,30">
                <PasswordBox x:Name="HiddenPasswordBox" 
                 Height="30" Padding="5,4,30,0" FontSize="14" 
                 PasswordChanged="HiddenPasswordBox_PasswordChanged"/>

                <TextBox x:Name="VisibleTextBox" 
             Height="30" Padding="5,4,30,0" FontSize="14" 
             Visibility="Collapsed" 
             TextChanged="VisibleTextBox_TextChanged"
             LostFocus="VisibleTextBox_LostFocus"/>

                <TextBlock Text="Master Password" IsHitTestVisible="False" Margin="8,6,30,0" FontSize="14" Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=VisibleTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ToggleButton x:Name="PeekButton" 
                  Width="24" Height="24" 
                  HorizontalAlignment="Right" Margin="0,0,3,0" 
                  Background="Transparent" BorderThickness="0"
                  Checked="PeekButton_Checked" 
                  Unchecked="PeekButton_Unchecked"
                  ToolTip="Show Password">
                    <TextBlock Text="ðŸ‘" FontSize="14"/>
                </ToggleButton>
            </Grid>

            <Button Height="35" FontSize="16" Command="{Binding LoginCommand}"
                    Style="{StaticResource PrimaryButtonStyle}">
                <Grid>
                    <TextBlock x:Name="LoginButtonText" Text="Login" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- Circular spinner: thick dark arc for visibility on blue and disabled background -->
                    <Ellipse Width="28" Height="28" Stroke="#070521" StrokeThickness="5" Fill="Transparent"
                             StrokeDashArray="0.4 0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                             VerticalAlignment="Center" HorizontalAlignment="Center"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                     From="0" To="360" Duration="0:0:0.8"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </Grid>
            </Button>

            <Button Content="Register" Cursor="Hand" Height="35" FontSize="14" Background="Transparent" Foreground="#0078D7" BorderThickness="0"
                    Margin="0,12,0,0" Click="RegisterButton_Click" IsEnabled="{Binding IsNotLoading}"/>

        </StackPanel>
    </Grid>
</Window>