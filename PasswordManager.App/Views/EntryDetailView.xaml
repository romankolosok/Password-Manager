<UserControl x:Class="PasswordManager.App.Views.EntryDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="500">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Back + Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="â† Back" Command="{Binding CancelCommand}" Padding="12,6" Margin="0,0,16,0"
                        Cursor="Hand" Background="Transparent" BorderThickness="0" FontSize="14"/>
                <TextBlock VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Add New Entry"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Text" Value="Edit Entry"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <!-- Site Name * -->
            <TextBlock Grid.Row="1" Text="Site Name *" FontSize="14" Margin="0,0,0,4"/>
            <TextBox Grid.Row="2" Text="{Binding WebsiteName, UpdateSourceTrigger=PropertyChanged}"
                     Height="32" Padding="8,4" FontSize="14" Margin="0,0,0,16"/>

            <!-- URL -->
            <TextBlock Grid.Row="3" Text="URL" FontSize="14" Margin="0,0,0,4"/>
            <TextBox Grid.Row="4" Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                     Height="32" Padding="8,4" FontSize="14" Margin="0,0,0,16"/>

            <!-- Username -->
            <TextBlock Grid.Row="5" Text="Username" FontSize="14" Margin="0,0,0,4"/>
            <TextBox Grid.Row="6" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Height="32" Padding="8,4" FontSize="14" Margin="0,0,0,16"/>

            <!-- Password + show + generate -->
            <TextBlock Grid.Row="7" Text="Password" FontSize="14" Margin="0,0,0,4"/>
            <Grid Grid.Row="8" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <PasswordBox x:Name="HiddenPasswordBox" Height="32" Padding="8,4" FontSize="14"
                                 PasswordChanged="HiddenPasswordBox_PasswordChanged">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                    <TextBox x:Name="VisiblePasswordBox" Height="32" Padding="8,4" FontSize="14" FontFamily="Consolas"
                             Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="VisiblePasswordBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
                <Button Grid.Column="1" Content="ðŸ‘" ToolTip="Show/Hide password"
                        Command="{Binding TogglePasswordVisibilityCommand}"
                        Width="36" Height="32" Margin="4,0,0,0" Cursor="Hand" Background="Transparent" BorderThickness="1"/>
                <Button Grid.Column="2" Content="âŸ³" ToolTip="Generate password" Command="{Binding GeneratePasswordCommand}"
                        Width="36" Height="32" Margin="4,0,0,0" Cursor="Hand" Background="Transparent" BorderThickness="1"/>
            </Grid>
            <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,0,0,16">
                <ProgressBar Value="{Binding PasswordStrength}" Maximum="128" Height="6" Width="200"
                             VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock VerticalAlignment="Center" FontSize="12" Foreground="Gray">
                    <Run Text="{Binding PasswordStrengthLabel, Mode=OneWay}"/>
                    <Run Text=" ("/>
                    <Run Text="{Binding PasswordStrength, StringFormat=N0, Mode=OneWay}"/>
                    <Run Text=" bits)"/>
                </TextBlock>
            </StackPanel>

            <!-- Generator Options -->
            <Border Grid.Row="10" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Generator Options" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Length:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding GeneratorLength, UpdateSourceTrigger=PropertyChanged}" Padding="4,2"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0,0,0">
                            <CheckBox Content="Upper" IsChecked="{Binding GeneratorIncludeUpper}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <CheckBox Content="Lower" IsChecked="{Binding GeneratorIncludeLower}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <CheckBox Content="Digits" IsChecked="{Binding GeneratorIncludeDigits}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <CheckBox Content="Symbols" IsChecked="{Binding GeneratorIncludeSymbols}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Category -->
            <TextBlock Grid.Row="11" Text="Category" FontSize="14" Margin="0,0,0,4"/>
            <TextBox Grid.Row="12" Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                     Height="32" Padding="8,4" FontSize="14" Margin="0,0,0,16"/>

            <!-- Notes -->
            <TextBlock Grid.Row="13" Text="Notes" FontSize="14" Margin="0,0,0,4"/>
            <TextBox Grid.Row="14" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                     Height="60" Padding="8,4" FontSize="14" Margin="0,0,0,16" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

            <!-- Favorite -->
            <CheckBox Grid.Row="15" Content="Favorite" IsChecked="{Binding IsFavorite}" Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="16" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
                <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="20,8" Margin="0,0,12,0"
                        Cursor="Hand" Background="Transparent" BorderThickness="1" BorderBrush="#999"/>
                <Button Content="Save" Command="{Binding SaveCommand}" Padding="20,8"
                        Cursor="Hand" Background="#0078D7" Foreground="White" BorderThickness="0"/>
            </StackPanel>

            <!-- Error message -->
            <TextBlock Grid.Row="17" Text="{Binding ErrorMessage}" Foreground="Red" FontSize="13"
                       Visibility="{Binding ErrorMessageVisible, Converter={StaticResource BoolToVisibility}}"/>
        </Grid>
    </ScrollViewer>
</UserControl>
