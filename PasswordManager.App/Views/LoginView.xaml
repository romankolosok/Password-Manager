<Window x:Class="PasswordManager.App.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.App.Views"
        mc:Ignorable="d"
        Title="LoginView" Height="600" Width="400">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">

            <TextBlock Text="Password Manager" HorizontalAlignment="Center" FontSize="24" Margin="0,0,0,40"/>

            <Grid Margin="0,0,0,15">
                <TextBox x:Name="EmailTextBox" Height="30" Padding="5,4,5,0" FontSize="14" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Email" IsHitTestVisible="False" Margin="8,6,0,0" FontSize="14" Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=EmailTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Invisible until login fails -->
            <TextBlock x:Name="LoginErrorBlock" Text="{Binding LoginError}" Foreground="#C42B1C" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,10"
                       Visibility="{Binding LoginErrorVisible, Converter={StaticResource BoolToVisibility}}"/>

            <Grid Margin="0,0,0,30">
                <PasswordBox x:Name="HiddenPasswordBox" 
                 Height="30" Padding="5,4,30,0" FontSize="14" 
                 PasswordChanged="HiddenPasswordBox_PasswordChanged"/>

                <TextBox x:Name="VisibleTextBox" 
             Height="30" Padding="5,4,30,0" FontSize="14" 
             Visibility="Collapsed" 
             TextChanged="VisibleTextBox_TextChanged"
             LostFocus="VisibleTextBox_LostFocus"/>

                <TextBlock Text="Master Password" IsHitTestVisible="False" Margin="8,6,30,0" FontSize="14" Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=VisibleTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ToggleButton x:Name="PeekButton" 
                  Width="24" Height="24" 
                  HorizontalAlignment="Right" Margin="0,0,3,0" 
                  Background="Transparent" BorderThickness="0"
                  Checked="PeekButton_Checked" 
                  Unchecked="PeekButton_Unchecked"
                  ToolTip="Show Password">
                    <TextBlock Text="ðŸ‘" FontSize="14"/>
                </ToggleButton>
            </Grid>

            <Button Content="Login" Cursor="Hand" Height="35" FontSize="16" Background="#0078D7" Foreground="White" BorderThickness="0"
                    Click="LoginButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Register" Cursor="Hand" Height="35" FontSize="14" Background="Transparent" Foreground="#0078D7" BorderThickness="0"
                    Margin="0,12,0,0" Click="RegisterButton_Click"/>

        </StackPanel>
    </Grid>
</Window>